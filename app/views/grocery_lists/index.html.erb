<div class="container" data-controller="grocery-items">
  <div class="row">
    <div class="col-10">
      <h3>Ingrédients</h3>
    </div>
    <div class="col-2">
      <div class="qty">
        <h3>Qty</h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <ul class="list-group-ingredient to-buy">
        <% @grocery_lists.where(bought: false).each do |grocery_item| %>
          <%= render partial: "item", locals: {item: grocery_item}%>
        <%end%>
      </ul>
    </div>
  </div>
  <div class="row">
    <h3>Déjà au frigo</h3>
  </div>
  <div class="row">
    <div class="col-12">
      <ul class="list-group-ingredient bought">
        <% @grocery_lists.where(bought: true).each do |grocery_item| %>
          <%= render partial: "item", locals: {item: grocery_item}%>
        <%end%>
      </ul>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= render "shared/bottom_navbar" %>
</div>
